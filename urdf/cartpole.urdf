<?xml version="1.0"?>
<robot name="physics">

    <link name="slideBar">
    <visual>
      <geometry>
        <box size="30 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="green">
        <color rgba="0 0.8 .8 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>

  <link name="cart">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.2"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
          <box size="0.5 0.5 0.2"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="4"/>
      <inertia ixx="0.0967 " ixy="0.0" ixz="0.0" iyy="0.0967" iyz="0.0" izz="0.1667 "/>
    </inertial>
  </link>

  <joint name="slider_to_cart" type="prismatic">
    <axis xyz="1 0 0"/>
    <origin xyz="0.0 0.0 0.0"/>
    <parent link="slideBar"/>
    <child link="cart"/>
    <dynamics damping="20.0" friction="0.7"/>
    <limit effort="50.0" lower="-2.4" upper="2.4" velocity="1.5"/>
  </joint>

  <link name="pole">
    <visual>
      <geometry>
        <box size="0.05 0.05 1.0"/>	
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <inertial>
    <origin xyz="0 0 0.5"/>
      <mass value="1"/>
      <inertia ixx="0.0836" ixy="0.0" ixz="0.0" iyy="0.0836" iyz="0.0" izz="0.00045"/>
    </inertial>
    <collision>
        <geometry>
          <cylinder radius="0.03" length="1.0"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0.5"/>
        <surface>
          <friction>
            <ode mu="0.5" mu2="0.3"/>
          </friction>
          <contact>
            <ode kp="1e8" kd="1e3"/>
          </contact>
        </surface>
    </collision>
    <!-- <collision>
  <cylinder radius="0.03" length="1.0"/>
      <surface>
        <friction ode="mu=0.5 mu2=0.3"/>
        <contact ode="kp=1e6 kd=1e3"/>
      </surface>
            <origin rpy="0 0 0" xyz="0 0 0.5"/>
     </collision> -->
  </link>

  <joint name="cart_to_pole" type="continuous">
    <axis xyz="0 1 0"/>
    <origin xyz="0.0 0.0 0"/>
    <dynamics damping="0.05"/>
    <parent link="cart"/>
    <child link="pole"/>
  </joint>
  
</robot>