<?xml version="1.0"?>
<robot name="assistive_walker">

  <!-- Base -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.12"/>
      <mass value="4.0"/>
      <inertia ixx="0.099" iyy="0.058" izz="0.053" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.12"/>
      <geometry>
        <box size="0.3 0.5 0.24"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.12"/>
      <geometry>
        <box size="0.3 0.5 0.24"/>
      </geometry>
      <surface>
        <friction>
          <ode mu="0.7" mu2="0.5"/>
        </friction>
      </surface>
    </collision>
  </link>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.8"/>
      <inertia ixx="0.005" iyy="0.005" izz="0.009" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.08"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.08"/>
      </geometry>
      <surface>
        <friction>
          <ode mu="1.2" mu2="0.8"/>
        </friction>
      </surface>
    </collision>
  </link>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.8"/>
      <inertia ixx="0.005" iyy="0.005" izz="0.009" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.08"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.08"/>
      </geometry>
      <surface>
        <friction>
          <ode mu="1.2" mu2="0.8"/>
        </friction>
      </surface>
    </collision>
  </link>

  <!-- Pole (Assistive Handle) -->
  <link name="pole">
    <inertial>
      <origin xyz="0 0 0.5"/>
      <mass value="1.2"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.00054" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder radius="0.03" length="1.0"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder radius="0.03" length="1.0"/>
      </geometry>
      <surface>
        <friction>
          <ode mu="0.8" mu2="0.6"/>
        </friction>
      </surface>
    </collision>
  </link>

  <!-- MPU6050 Sensor (IMU) -->
  <link name="imu_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.00001" iyy="0.00001" izz="0.00001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.01"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Joints -->

  <!-- Left Wheel Joint -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.28 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.05" friction="0.2"/>
  </joint>

  <!-- Right Wheel Joint -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.28 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.05" friction="0.2"/>
  </joint>

  <!-- Pole Joint -->
  <joint name="pole_joint" type="revolute">
    <parent link="base_link"/>
    <child link="pole"/>
    <origin xyz="0.05 0 0.24" rpy="0 0 0"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="10"/>
  </joint>

  <!-- IMU Joint -->
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.24" rpy="0 0 0"/>
    
  </joint>

</robot>
