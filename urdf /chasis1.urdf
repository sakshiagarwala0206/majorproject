<?xml version="1.0"?>
<robot name="assistive_walker">

  <!-- Base of the walker -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.1" />
      <mass value="3.0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
    </inertial>
    <visual>
      <geometry><box size="0.4 0.2 0.1"/></geometry>
      <material name="gray"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
    <collision>
      <geometry><box size="0.4 0.2 0.1"/></geometry>
    </collision>
  </link>

  <!-- Left wheel -->
  <link name="left_wheel">
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"/>
    </inertial>
    <visual>
      <geometry><cylinder radius="0.10" length="0.02"/></geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
    <collision>
      <geometry><cylinder radius="0.10" length="0.02"/></geometry>
    </collision>
  </link>

  <!-- Right wheel -->
  <link name="right_wheel">
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"/>
    </inertial>
    <visual>
      <geometry><cylinder radius="0.10" length="0.02"/></geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.10" length="0.02"/></geometry>
    </collision>
  </link>

  <!-- Upright pole -->
  <link name="pole">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry><cylinder radius="0.03" length="1.0"/></geometry>
      <material name="blue"><color rgba="0.2 0.4 1.0 1"/></material>
    </visual>
    <collision>
      <geometry><cylinder radius="0.03" length="1.0"/></geometry>
    </collision>
  </link>

  <!-- Joint: Left wheel -->
  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0.0 -0.11 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Joint: Right wheel -->
  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0.0 0.11 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Joint: Pole -->
  <joint name="pole_joint" type="revolute">
    <origin xyz="0 0 0.05"/>
    <parent link="base_link"/>
    <child link="pole"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="2"/>
  </joint>

</robot>